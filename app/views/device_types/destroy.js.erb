if (<%= @device_type.errors.blank? %>) {
  $('#table-devices-types').DataTable().ajax.reload(null, false);

  $(function () {
    toastr.options = notification_options
    toastr.success('Borrado satisfactorimente', " " )
  });
} else {
  $(function () {
    toastr.options = notification_options
    toastr.error('<%= @device_type.errors.get(:base) %>', "Error" )
  });
}
$('#detail').html("")

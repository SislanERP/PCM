<%= form_for([@company, @device], remote: true, html: {class: "form"}) do |f| %>
  <% if @device.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@device.errors.count, "error") %> prohibited this device from being saved:</h2>

      <ul>
      <% @device.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label t('branch') %>
    <%= f.collection_select @branch_id, @branches, :id, :name %>
  </div>

  <!-- <div class="form-group">
    <%= f.label t('plant') %>

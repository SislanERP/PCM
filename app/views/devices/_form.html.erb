  </div> -->

  <div class="form-group">
    <%= f.label t('name') %>
    <%= f.text_field :name, autofocus: true, id: "name", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('serial_number') %>
    <%= f.text_field :serial_number, autofocus: true, id: "serial_number", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('brand_model') %>
    <%= f.text_field :brand_model, autofocus: true, id: "brand_model", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('potency') %>
    <%= f.text_field :potency, autofocus: true, id: "potency", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('production_capacity') %>
    <%= f.text_field :production_capacity, autofocus: true, id: "production_capacity", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('intake') %>
    <%= f.text_field :intake, autofocus: true, id: "intake", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('description') %>
    <%= f.text_area :description, id: "description", class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label t('observation') %>
    <%= f.text_area :observation, id: "observation", class: "form-control" %>
  </div>

  <div>
    <%= f.submit "data-disable-with": "...", class: "btn btn-primary pull-right"%>
  </div>
<% end %>

  $(function () {
    toastr.options = notification_options
    toastr.success('Creado satisfactorimente', " " )
  });

  // $('#table-devices-types').DataTable().ajax.reload(null, false);
  $('#master_plan').html("");

  $('#master_plan').html("<%=j render :partial => 'master_maintenance_plans/other_master_maintenance_plans', :locals => { master_maintenance_plans: @master_maintenance_plans} %>");



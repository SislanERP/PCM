<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div class="row">
    <div>

      <h1 class="logo-name">PCM</h1>

    </div>



    <h2><%= t('.forgot_your_password') %></h2>

    <%= form_for(:user, url: password_path(:user), html: { method: :post, class: "m-t", role: "form" }) do |f| %>


      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder: t(:email) %>
      </div>


      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>

    <% end %>

    <%= render "devise/shared/links" %>
    <p class="m-t">
      <small>Copyright Landes S. A. &copy; 2016-2017 - CPM Software</small>
    </p>
  </div>
</div>

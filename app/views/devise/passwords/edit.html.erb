<% content_for :title, "PCM - #{t('.change_my_password')}" %>

<div class="middle-box text-center loginscreen  animated fadeInDown">
  <div class="row">
    <div>

      <h1 class="logo-name">PCM</h1>

    </div>


    <h2><%= t('.change_your_password') %></h2>
    <div class="notice"><%= notice %></div>
    <div class="alert"><%= alert %></div>

    <%= form_for(:user, url: password_path(:user), html: { method: :put, class: "m-t", role: "form" }) do |f| %>

      <%= f.hidden_field :reset_password_token %>

      <div class="form-group">
        <% if @minimum_password_length %>
          <em>(<%= "#{@minimum_password_length} #{t('.characters_minimum')}" %>)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "off", placeholder: t('.new_password') %>
      </div>

      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder: t('.confirm_new_password'), autocomplete: "off" %>
      </div>

      <%= f.submit t('.change_my_password'), class: "btn btn-primary" %>
    <% end %>

    <%= render "devise/shared/links" %>
    <p class="m-t">
      <small>Copyright Landes S. A. &copy; 2016-2017 - PCM Software</small>
    </p>
  </div>
</div>
